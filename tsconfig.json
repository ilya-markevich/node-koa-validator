{
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "pretty": true,
    "removeComments": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "target": "es6"
  },
  "include": ["tsTests/**/*", "index.d.ts"]
}
